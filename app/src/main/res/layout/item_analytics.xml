<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/grey_50"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/civHomeIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_facebook"
            android:elevation="@dimen/_3sdp"
            android:layout_margin="@dimen/_5sdp"
            android:contentDescription="@string/content_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvIconName"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tvIconName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="0dp"
            android:hyphenationFrequency="none"
            app:layout_constraintTop_toTopOf="@id/civHomeIcon"
            app:layout_constraintBottom_toBottomOf="@id/civHomeIcon"
            app:layout_constraintStart_toEndOf="@id/civHomeIcon"
            app:layout_constraintEnd_toStartOf="@id/tvTotalCount"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvTotalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/_0"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="0dp"
            android:hyphenationFrequency="none"
            app:layout_constraintTop_toTopOf="@id/civHomeIcon"
            app:layout_constraintBottom_toBottomOf="@id/civHomeIcon"
            app:layout_constraintStart_toEndOf="@id/tvIconName"
            app:layout_constraintEnd_toStartOf="@id/ivInfo"
            />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/ic_question_mark"
            app:tint="@color/darkGrey"
            android:layout_marginEnd="@dimen/_5sdp"
            android:contentDescription="@string/content_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>