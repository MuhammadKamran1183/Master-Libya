<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/poppins_reg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/bottomSheetStyle</item>
        <item name="materialButtonStyle">@style/materialButtonStyle</item>

    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimaryVariant</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">?attr/colorPrimaryVariant</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="materialButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/poppins_med</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomSheetStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="SubHeadingStyle" parent="@style/Theme.MyApp">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="fontFamily">@font/poppins_med</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="datePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">?attr/colorPrimary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">?attr/colorPrimary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

    <style name="CardViewForButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cardCornerRadius">@dimen/_25sdp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">@dimen/_3sdp</item>
    </style>

    <style name="TextViewForButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>